local RollSection = GeneralTab:Section({ Title = "Auto Roll", Icon = "refresh-cw" })

local function GetTokenDisplay(rollType)
    if rollType == "Biju" then return "Biju"
    elseif rollType == "Race" then return "Race"
    elseif rollType == "Sayajin" then return "Sayajin"
    elseif rollType == "Fruits" then return "Fruits"
    elseif rollType == "Haki" then return "Haki"
    elseif rollType == "Breathing" then return "Breathing"
    else return rollType
    end
end

local rollToggleData = {
    {"Biju", "AutoRollBiju", LogicAutoRollBiju},
    {"Race", "AutoRollRace", LogicAutoRollRace},
    {"Sayajin", "AutoRollSayajin", LogicAutoRollSayajin},
    {"Fruits", "AutoRollFruits", LogicAutoRollFruits},
    {"Haki", "AutoRollHaki", LogicAutoRollHaki},
    {"Breathing", "AutoRollBreathing", LogicAutoRollBreathing}
}

for i, rollData in ipairs(rollToggleData) do
    local rollType = rollData[1]
    local configFlag = rollData[2]
    local logicFunc = rollData[3]
    local tokenDisplay = GetTokenDisplay(rollType)

    local myToggle = RollSection:Toggle({ 
        Title = tokenDisplay,
        Flag = configFlag .. "_Cfg",
        Callback = function(val)
            Config[configFlag] = val
            if val then task.spawn(logicFunc) end
        end
    })

    if myToggle.ToggleFrame and myToggle.ToggleFrame.UIElements and myToggle.ToggleFrame.UIElements.Main then
        local toggleMain = myToggle.ToggleFrame.UIElements.Main
        local sectionContent = toggleMain.Parent 
        
        if not sectionContent:FindFirstChild("CustomGrid") then
            local oldLayout = sectionContent:FindFirstChildOfClass("UIListLayout")
            if oldLayout then oldLayout:Destroy() end
            
            local grid = Instance.new("UIGridLayout")
            grid.Name = "CustomGrid"
            grid.Parent = sectionContent
            grid.SortOrder = Enum.SortOrder.LayoutOrder
            grid.CellSize = UDim2.new(0.485, 0, 0, 45) 
            grid.CellPadding = UDim2.new(0.02, 0, 0.02, 0)
        end

        local toggleFrame = toggleMain:FindFirstChild("Frame") 
        if toggleFrame then
            local manualImg = Instance.new("ImageLabel")
            manualImg.Name = "ManualIcon"
            manualImg.Size = UDim2.fromOffset(28, 28) 
            manualImg.BackgroundTransparency = 1
            manualImg.Image = GetRollIconAsset(rollType)
            manualImg.LayoutOrder = -2 
            manualImg.Parent = toggleFrame
            
            local padding = Instance.new("UIPadding")
            padding.PaddingRight = UDim.new(0, 8)
            padding.Parent = manualImg

            local textLabel = toggleFrame:FindFirstChildOfClass("TextLabel")
            if textLabel then
                textLabel.LayoutOrder = -1 
                textLabel.TextXAlignment = Enum.TextXAlignment.Left
            end
            
            local listLayout = toggleFrame:FindFirstChildOfClass("UIListLayout")
            if listLayout then
                listLayout.FillDirection = Enum.FillDirection.Horizontal
                listLayout.VerticalAlignment = Enum.VerticalAlignment.Center
                listLayout.Padding = UDim.new(0, 6) 
            end
        end
    end

    RollToggleUI[rollType] = myToggle
end


