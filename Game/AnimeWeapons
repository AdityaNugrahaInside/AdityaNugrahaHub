Unreliable.OnClientEvent:Connect(function(cmd, data)
    if cmd == "Notify" and type(data) == "table" and data[1] == "NotEnough" then
        local materialName = data[2] 
        local configFlag = MaterialToConfig[materialName]
        if configFlag and Config[configFlag] then
            Config[configFlag] = false
            local rollType = configFlag:match("AutoRoll(.*)")
            local toggleObj = RollToggleUI[rollType]
            if toggleObj and toggleObj.Set then
                toggleObj:Set(false)
                l:Notify({Title = "Auto Roll Stopped", Content = "Insufficient " .. materialName .. ". Auto Roll turned off.", Icon = "alert-triangle", Duration = 4})
            end
        end
    end
end)


-- [LOGIC LOOPS]
local function GetHRP() return LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") end
LocalPlayer.CharacterAdded:Connect(function(char)
    hrp = char:WaitForChild("HumanoidRootPart"); humanoid = char:WaitForChild("Humanoid")
    pcall(function() attackRangePart = Workspace:WaitForChild("AttackRange", 5).Part; if attackRangePart then attackRange = attackRangePart.Size.X/2 end end)
end)
pcall(function()
    if LocalPlayer.Character then hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart"); humanoid = LocalPlayer.Character:FindFirstChild("Humanoid") end
    attackRangePart = Workspace:FindFirstChild("AttackRange", 5) and Workspace.AttackRange.Part
    if attackRangePart then attackRange = attackRangePart.Size.X/2 end
end)

local function getDistance(obj1, obj2)
    local pos1 = (obj1:IsA("Model") and obj1:GetPivot().Position) or (obj1:IsA("BasePart") and obj1.Position)
    local pos2 = (obj2:IsA("Model") and obj2:GetPivot().Position) or (obj2:IsA("BasePart") and obj2.Position)
    return (pos1 and pos2) and (pos1 - pos2).Magnitude or 99999
end

local function getPosition(obj1)
    if obj1:IsA("Model") then return obj1:GetPivot().Position
    elseif obj1:IsA("BasePart") then return obj1.Position end
    return nil
end

local function kill(monster)
    if not hrp or not monster or not monster:FindFirstChild("Head") then return end
    local head = monster.Head
    local hrpToFeet = (hrp.Size.Y / 2) + (humanoid.HipHeight or 2)
    local safeHeight = 0 
    local headPos = getPosition(head)
    if not headPos then return end
    local targetPos = headPos + Vector3.new(5, hrpToFeet + safeHeight, 5) 
    
    local alive = true
    local con = monster.ChildRemoved:Connect(function(child) if child.Name == "Head" or child.Name == "Humanoid" then alive = false end end)
    
    while Config.AutoFarm and alive and monster.Parent do
        if head.Transparency ~= 0 then break end
        hrp.CFrame = CFrame.new(targetPos)
        if attackRangePart and getDistance(attackRangePart, monster) > distance then break end
        
        local newHeadPos = getPosition(head)
        if not newHeadPos then break end
        targetPos = newHeadPos + Vector3.new(5, hrpToFeet + safeHeight, 5) 
        
        task.wait()
    end
    if con then con:Disconnect() end
end

local function LogicAutoFarm()
    while Config.AutoFarm do
        if Window.Destroyed then break end 
        local enemies = Workspace:FindFirstChild("Enemies")
        if enemies then
            for _, m in pairs(enemies:GetChildren()) do
                if not Config.AutoFarm then break end
                if m:FindFirstChild("Head") and m.Head.Transparency == 0 then
                    local isTarget = false
                    for _, t in pairs(Config.TargetEnemies) do if m.Name == t then isTarget = true break end end
                    if isTarget then kill(m) end
                end
            end
        end
        task.wait()
    end
end

-- [UPDATED: TAP LAYAR FISIK TIMER 30 DETIK]
local function LogicAntiAFK()
    -- Menggunakan VirtualInputManager (VIM) untuk simulasi tap fisik
    -- Loop manual setiap 30 detik agar pasti works di mobile
    while Config.AntiAFK do
        if Window.Destroyed then break end
        
        -- Tunggu 30 Detik
        task.wait(30)
        
        if Config.AntiAFK and VirtualInputManager then
            pcall(function()
                local cam = Workspace.CurrentCamera
                if cam then
                    local viewport = cam.ViewportSize
                    -- TAP DI POJOK KANAN BAWAH (X*0.85, Y*0.85)
                    -- Lokasi ini biasanya aman (tombol lompat/kosong)
                    -- Jauh dari tengah layar agar UI kamu tidak tertutup/terklik
                    local tapX = viewport.X * 0.85
                    local tapY = viewport.Y * 0.85
                    
                    -- Simulasi Sentuh (Touch Start -> End)
                    VirtualInputManager:SendMouseButtonEvent(tapX, tapY, 0, true, game, 1)
                    task.wait(0.1)
                    VirtualInputManager:SendMouseButtonEvent(tapX, tapY, 0, false, game, 1)
                end
            end)
        end
    end
end

local function MaintainAutoStatus()
    while (Config.AutoFarm or Config.AutoDungeon) and not Window.Destroyed do
        if Reliable then
            pcall(function()
                local btn = Players.LocalPlayer.PlayerGui.Screen.Hud.botton.auto.enabled
                if btn.Image == IMG_OFF then Reliable:FireServer("Settings", {"AutoClick", true}) end
            end)
            pcall(function()
                local btn = Players.LocalPlayer.PlayerGui.Screen.Hud.botton.attack.enabled
                if btn.Image == IMG_OFF then Reliable:FireServer("Settings", {"AutoAttack", true}) end
            end)
        end
        task.wait(0.5)
    end
end

local function isPlayerInZone(zone)
    local chars = zone:FindFirstChild("Characters")
    if chars and chars:FindFirstChild(LocalPlayer.Name) then return true end
    return false
end

local function GetCurrentMapStatus()
    local zones = Workspace:FindFirstChild("Zones")
    if zones then
        for _, zone in pairs(zones:GetChildren()) do
            if isPlayerInZone(zone) then return zone.Name end
        end
    end
    if Workspace:FindFirstChild("Dungeon") then return "Dungeon" end
    if Workspace:FindFirstChild("Raid") then return "Raid" end
    if Workspace:FindFirstChild("Enemies") and not zones then return "Dungeon:Active" end
    return "Unknown"
end

local function LogicGamemodes()
    local wasInGamemode = false
    while Config.AutoDungeon do
        if Window.Destroyed then break end
        local currentMap = GetCurrentMapStatus()
        
        local inLobbyZone = false
        if Workspace:FindFirstChild("Zones") and Workspace.Zones:FindFirstChild("Dungeon") then
            if isPlayerInZone(Workspace.Zones.Dungeon) then inLobbyZone = true end
        end

        local isFightingZone = string.find(currentMap, ":") and (string.find(currentMap, "Dungeon") or string.find(currentMap, "Raid"))

        if currentMap ~= "Unknown" then
            if isFightingZone then
                wasInGamemode = true
                local enemies = Workspace:FindFirstChild("Enemies")
                if enemies then
                    for _, m in pairs(enemies:GetChildren()) do
                        if not Config.AutoDungeon then break end
                        if m:FindFirstChild("Head") and m.Head.Transparency == 0 then kill(m) end
                    end
                end
                task.wait(0.1)
            elseif inLobbyZone or (wasInGamemode and not isFightingZone) then
                if LastZone and LastZone ~= "" and LastZone ~= "Dungeon" and LastZone ~= "Raid" and LastZone ~= "Unknown" then
                    l:Notify({Title="Dungeon Finished", Content="In Lobby -> Returning to "..LastZone, Icon="map-pin", Duration=3})
                    if Reliable then pcall(function() Reliable:FireServer("Zone Teleport", { LastZone }) end) end
                    wasInGamemode = false
                    task.wait(4) 
                else
                    wasInGamemode = false 
                end
            else
                local t = os.date("*t")
                local currentMinute = t.min
                local targetString = nil
                local targetName = ""
                
                for _, dName in pairs(Config.TargetDungeon) do
                    local data = dungeonDB[dName] 
                    if data and currentMinute == data.Time then
                        targetString = "Dungeon:" .. tostring(data.ID)
                        targetName = dName
                        break
                    end
                end
                
                if not targetString then
                    for _, rName in pairs(Config.TargetRaid) do
                        local data = raidDB[rName]
                        if data and data.Times then
                            for _, timeVal in ipairs(data.Times) do
                                if currentMinute == timeVal then
                                    targetString = "Raid:" .. tostring(data.ID)
                                    targetName = rName
                                    break
                                end
                            end
                        end
                        if targetString then break end
                    end
                end
                
                if targetString then 
                    if not string.find(currentMap, "Dungeon") and not string.find(currentMap, "Raid") then
                        LastZone = currentMap
                    end
                    l:Notify({Title="Auto Mode", Content="Joining "..targetName, Icon="swords", Duration=2})
                    if Reliable then pcall(function() Reliable:FireServer("Join Gamemode", {targetString}) end) end
                    task.wait(5) 
                end
            end
        end
        task.wait(1)
    end
end

local function LogicSmartRankUp()
    while Config.AutoRankUp do
        if Window.Destroyed then break end
        local rankVal = 0
        local leaderstats = Players.LocalPlayer:FindFirstChild("leaderstats")
        local rankStat = leaderstats and leaderstats:FindFirstChild("Rank") 
        if rankStat then rankVal = rankStat.Value end
        local Requirement = 30000 * (8.4 ^ rankVal)
        local percent = 0
        if Requirement > 0 then percent = math.clamp(CurrentMastery / Requirement, 0, 1) end
        local barText = string.rep("█", math.floor(percent*10)) .. string.rep("▒", 10 - math.floor(percent*10))
        
        if RankProgressUI then
            RankProgressUI:SetTitle(string.format("Rank %d  [%s]  %d%%", rankVal, barText, math.floor(percent*100)))
            RankProgressUI:SetDesc(string.format("Mastery: %s / %s", FormatNumber(CurrentMastery), FormatNumber(Requirement)))
        end
        
        if CurrentMastery >= Requirement and CurrentMastery > 0 and Requirement > 0 then
            if Reliable then pcall(function() Reliable:FireServer("RankUp") end) end
        end
        task.wait(1)
    end
end

local function LogicAutoRoll(rollType, configFlag)
    while Config[configFlag] and not Window.Destroyed do
        if Reliable then pcall(function() Reliable:FireServer("Crate Roll Start", {rollType, false}) end) end
        task.wait(0.5)
    end
end
local function LogicAutoRollBiju() LogicAutoRoll("Biju", "AutoRollBiju") end
local function LogicAutoRollRace() LogicAutoRoll("Race", "AutoRollRace") end
local function LogicAutoRollSayajin() LogicAutoRoll("Sayajin", "AutoRollSayajin") end
local function LogicAutoRollFruits() LogicAutoRoll("Fruits", "AutoRollFruits") end
local function LogicAutoRollHaki() LogicAutoRoll("Haki", "AutoRollHaki") end
local function LogicAutoRollBreathing() LogicAutoRoll("Breathing", "AutoRollBreathing") end


