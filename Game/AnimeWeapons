-- [LOGIC: ZONE MONITOR & SYNC V10]
task.spawn(function()
    local prevZone = ""
    
    while not Window.Destroyed do
        task.wait(1) -- Interval cek zona
        
        local detectedZone = GetCurrentMapStatus()
        
        -- Cek jika pindah zona
        if detectedZone and detectedZone ~= "Unknown" and detectedZone ~= prevZone then
            prevZone = detectedZone
            CurrentZoneName = detectedZone
            
            -- [PHASE 1] KUNCI SISTEM (PENTING!)
            IsLoadingConfig = true 
            
            -- [PHASE 2] SCAN MUSUH
            local freshEnemies = GetCurrentZoneEnemies()
            CurrentZoneEnemiesCache = freshEnemies -- Update Cache Global
            
            -- [PHASE 3] REFRESH DROPDOWN (KOSONGKAN DULU)
            -- Kita refresh list opsi, tapi visual seleksi belum masuk
            pcall(function() EnemyDropdown:Refresh(freshEnemies) end)
            task.wait(0.2) -- Jeda visual
            
            -- [PHASE 4] RESTORE DATA DARI JSON
            local savedData = Config.ZoneConfigurations[detectedZone] or {}
            local objectsToSelect = {}
            local valuesForConfig = {}
            
            -- Logika Pencocokan Cerdas:
            -- Kita punya list musuh saat ini (freshEnemies) dan data simpanan (savedData).
            -- Kita harus mencari Object 'freshEnemies' yang Value-nya SAMA dengan 'savedData'.
            -- WindUI butuh Object 'freshEnemies' itu agar bisa mencentangnya.
            
            for _, savedItem in ipairs(savedData) do
                for _, currentMob in ipairs(freshEnemies) do
                    -- Bandingkan ID/Value uniknya (misal: "Marco")
                    if currentMob.Value == savedItem.Value then
                        -- KETEMU! Masukkan Object game saat ini ke daftar seleksi
                        table.insert(objectsToSelect, currentMob) 
                        table.insert(valuesForConfig, currentMob.Value)
                        break
                    end
                end
            end
            
            -- [PHASE 5] TERAPKAN SELEKSI
            if #objectsToSelect > 0 then
                -- Update Config AutoFarm (String List)
                Config.TargetEnemies = valuesForConfig
                
                -- Update Visual Dropdown (Object List) -> Ini yang bikin tercentang!
                pcall(function()
                    EnemyDropdown:Select(objectsToSelect)
                end)
                
                -- Update Text Label Dropdown (Feedback Visual Tambahan)
                pcall(function()
                    if EnemyDropdown.UIElements and EnemyDropdown.UIElements.Dropdown then
                        local label = EnemyDropdown.UIElements.Dropdown.Frame.Frame.TextLabel
                        if #objectsToSelect == 1 then
                            label.Text = objectsToSelect[1].Title
                        else
                            label.Text = #objectsToSelect .. " Selected"
                        end
                    end
                end)
            else
                -- Jika tidak ada data, reset
                Config.TargetEnemies = {}
                pcall(function() 
                    EnemyDropdown:Select({}) 
                    -- Reset text label
                    if EnemyDropdown.UIElements and EnemyDropdown.UIElements.Dropdown then
                        EnemyDropdown.UIElements.Dropdown.Frame.Frame.TextLabel.Text = "--"
                    end
                end)
            end
            
            -- [PHASE 6] BUKA KUNCI
            task.wait(0.2)
            IsLoadingConfig = false
        end
    end
end)

task.spawn(function()
    task.wait(1.5)
    local DefaultConfig = "ANConfig"
    local CM = Window.ConfigManager
    if not isfolder("WindUI/"..FolderPath.."/config") then makefolder("WindUI/"..FolderPath.."/config") end
    
    pcall(function()
        if isfile("WindUI/"..FolderPath.."/config/"..DefaultConfig..".json") then
            local cfg = CM:GetConfig(DefaultConfig) or CM:CreateConfig(DefaultConfig)
            cfg:Load()
            LoadZoneDB()
            l:Notify({Title = "Config", Content = "Restored ANConfig", Icon = "check", Duration = 2})
        else CM:CreateConfig(DefaultConfig) end
    end)
    
    while not Window.Destroyed do
        task.wait(10)
        pcall(function() local cfg = Window.ConfigManager:GetConfig(DefaultConfig); if cfg then cfg:Save() else CM:CreateConfig(DefaultConfig):Save() end end)
        if CurrentZoneName ~= "" then
             SaveZoneConfig(CurrentZoneName, Config.TargetEnemies)
        end
    end
end)

